{

  "manifest_version": 2,
  "name": "Instagram Random Comments",
  "version": "1.0.2",

  "description": "Adds a browser action icon to the toolbar. Click the load button to load all comments. Click the get comment to get a random comment." ,
  "homepage_url": "https://github.com/clcert/beacon-random-comments",
  "icons": {
    "64": "icons/dice-64.png"
  },

  "permissions": [
    "<all_urls>",
    "webRequest",
    "activeTab",
    "tabs",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/p/*"],
      "js": [
        "content_scripts/seedrandom.min.js",
        "content_scripts/instagram_random_comments.js"
       ]
    }
  ],

  "browser_action": {
    "default_icon": "icons/dice-64.png",
    "default_title": "Instagram Random Comments",
    "default_popup": "popup/choose_comment.html"
  },

  "web_accessible_resources": [
    "gif/loading.gif"
  ]
}